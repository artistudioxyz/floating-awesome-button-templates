{
  "id": "join-community-toast",
  "name": "Join Community Toast",
  "description": "Add a community signup toast notification to invite visitors to join your community. Perfect for building engaged communities and fostering connections!",
  "license": "free",
  "settings": {
    "type": "toast",
    "message": "Join our thriving community and connect with like-minded people!",
    "duration": 3000,
    "text_button": "Join Now",
    "url_button": "#",
    "open_in_new_tab": true
  },
  "design": {
    "color": "#FF5722",
    "icon": {
        "color": "#fff",
        "class": "fa-solid fa-users"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202",
    "bar_color": "#FF5722",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    }
  },
  "cookie": {
    "expiration": "7"
  }
}
