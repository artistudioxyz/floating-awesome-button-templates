{
  "id": "woocommerce-toast-year-end-clearance",
  "docs": 12821,
  "name": "WooCommerce Year End Clearance Toast",
  "description": "Add a toast notification to promote your year-end clearance sale. Perfect for WooCommerce stores looking to boost sales during the holiday season!",
  "license": "premium",
  "requires": ["woocommerce/woocommerce.php"],
  "settings": {
    "type": "toast",
    "message": "Year End Clearance Sale! Up to 50% off on selected items.",
    "duration": 3000,
    "text_button": "Shop Now",
    "url_button": "/shop",
    "open_in_new_tab": false
  },
  "design": {
    "color": "#7f54b3",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-tag"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202",
    "bar_color": "#E31837",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    },
    "shape": "none",
    "standalone": true
  },
  "cookie": {
    "expiration": "0"
  },
  "location": [
    {
      "logic": null,
      "rules": [
        {
          "type": "schedule_yearly",
          "operator": ">=",
          "value": "2025-12-01",
          "logic": "OR"
        },
        {
          "type": "schedule_yearly",
          "operator": "<=",
          "value": "2025-12-31",
          "logic": "AND"
        }
      ]
    }
  ]
}
