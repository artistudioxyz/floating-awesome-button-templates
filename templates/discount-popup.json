  "license": "free",
  "settings": {
    "type": "modal",
    "content": "Create an eye-catching discount offer by adding text, images, or videos!"
  },
  "design": {
    "color": "#e91e63",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-percent"
    },
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
