{
  "id": "rsvp-toast",
  "name": "RSVP Button",
  "description": "Add a floating RSVP button to your website, making it easy for visitors to respond to your event invitations. Perfect for weddings, conferences, and other events!",
  "license": "free",
  "settings": {
    "type": "toast",
    "message": "Please RSVP for our upcoming event!",
    "duration": 3000,
    "text_button": "RSVP Now",
    "url_button": "#",
    "open_in_new_tab": true
  },
  "design": {
    "color": "#E91E63",
    "icon": {
        "color": "#fff",
        "class": "fa-solid fa-calendar-check"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202", 
    "bar_color": "#E91E63",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    }
  },
  "cookie": {
    "expiration": "7"
  }
}
