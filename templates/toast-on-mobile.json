{
  "id": "toast-on-mobile",
  "name": "Toast on Mobile",
  "description": "Add a toast notification that only appears for mobile visitors. Perfect for mobile-specific announcements, promotions, or any content you want to show as a toast on mobile devices!",
  "license": "premium",
  "settings": {
    "type": "toast",
    "message": "Your mobile-specific message here",
    "duration": 3000,
    "text_button": "Learn More",
    "url_button": "#",
    "open_in_new_tab": false
  },
  "design": {
    "color": "#4CAF50",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-mobile"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202",
    "bar_color": "#4CAF50",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 0,
        "desktop": 0
      }
    },
    "shape": "none",
    "standalone": true
  },
  "cookie": {
    "expiration": "7"
  }
}
