{
  "id": "woocommerce-popup-bestsellers",
  "name": "WooCommerce Bestsellers Popup",
  "description": "Display a floating button that shows a popup with bestselling WooCommerce products. Perfect for showcasing your most popular products to customers!",
  "license": "premium",
  "requires": ["woocommerce/woocommerce.php"],
  "settings": {
    "type": "bestsellers"
  },
  "design": {
    "color": "#7f54b3",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-award"
    },
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    },
    "shape": "none",
    "standalone": true
  }
}
