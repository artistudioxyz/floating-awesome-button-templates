{
  "id": "woocommerce-toast-summer-promotion",
  "name": "WooCommerce Summer Promotion Toast",
  "docs": 12586,
  "description": "Add a toast notification to promote your summer season sale. Perfect for WooCommerce stores looking to boost sales during the summer season!",
  "license": "premium",
  "requires": ["woocommerce/woocommerce.php"],
  "settings": {
    "type": "toast",
    "message": "Summer Sale! Cool down with up to 40% off on seasonal favorites.",
    "duration": 3000,
    "text_button": "Shop Now",
    "url_button": "/shop",
    "open_in_new_tab": false
  },
  "design": {
    "color": "#7f54b3",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-sun"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202",
    "bar_color": "#F39C12",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    },
    "shape": "none",
    "standalone": true
  },
  "cookie": {
    "expiration": "0"
  },
  "location": [
    {
      "logic": null,
      "rules": [
        {
          "type": "schedule_date",
          "operator": ">=",
          "value": "2025-06-01",
          "logic": "OR"
        },
        {
          "type": "schedule_date",
          "operator": "<=",
          "value": "2025-08-31",
          "logic": "AND"
        }
      ]
    }
  ]
}
