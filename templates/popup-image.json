{
  "id": "popup-image",
  "name": "Popup Image",
  "description": "Add a popup window to display an image on your website. Perfect for showcasing photos, banners, or promotional graphics in an elegant overlay!",
  "license": "free",
  "settings": {
    "type": "modal",
    "content": "<img src=\"https://ps.w.org/floating-awesome-button/assets/banner-772x250.png\" style=\"max-width:100%;height:auto;\">"
  },
  "design": {
    "color": "#e91e63",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-image"
    },
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    },
    "shape": "none",
    "standalone": true
  },
  "modal": {
    "layout": {
      "id": "stacked",
      "background": {
        "color": "#fff"
      },
      "overlay": {
        "color": "#f9f9f9",
        "opacity": 0.8
      },
      "content": {
        "padding": {
          "top": "1",
          "right": "1",
          "bottom": "1",
          "left": "1",
          "sizing": "rem"
        },
        "margin": {
          "top": "0",
          "right": "0",
          "bottom": "0",
          "left": "0",
          "sizing": "rem"
        }
      }
    }
  }
}
