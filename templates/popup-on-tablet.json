{
  "id": "popup-on-tablet",
  "name": "Popup on Tablet",
  "description": "Add a popup window that only appears for tablet visitors. Perfect for tablet-specific announcements, forms, or any content you want to show in an overlay on tablet devices!",
  "license": "premium",
  "settings": {
    "type": "modal",
    "content": "Add your tablet-specific content here"
  },
  "design": {
    "color": "#e91e63",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-tablet"
    },
    "responsive": {
      "device": {
        "mobile": 0,
        "tablet": 1,
        "desktop": 0
      }
    },
    "shape": "none",
    "standalone": true
  },
  "modal": {
    "layout": {
      "id": "stacked",
      "background": {
        "color": "#fff"
      },
      "overlay": {
        "color": "#f9f9f9",
        "opacity": 0.8
      },
      "content": {
        "padding": {
          "top": "1",
          "right": "1",
          "bottom": "1",
          "left": "1",
          "sizing": "rem"
        },
        "margin": {
          "top": "0",
          "right": "0",
          "bottom": "0",
          "left": "0",
          "sizing": "rem"
        }
      }
    },
    "navigation": {
      "iconCover": true
    }
  }
}
