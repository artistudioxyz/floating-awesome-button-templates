{
  "id": "woocommerce-toast-june-promotion",
  "name": "WooCommerce June Promotion Toast",
  "docs": 12744,
  "description": "Add a toast notification to promote your June summer sale. Perfect for WooCommerce stores looking to boost sales during the summer season!",
  "license": "premium",
  "requires": ["woocommerce/woocommerce.php"],
  "settings": {
    "type": "toast",
    "message": "Summer Kickoff! Enjoy up to 35% off on summer essentials and new arrivals!",
    "duration": 3000,
    "text_button": "Shop Now",
    "url_button": "/shop",
    "open_in_new_tab": false
  },
  "design": {
    "color": "#7f54b3",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-solid fa-sun"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202",
    "bar_color": "#FF5722",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    },
    "shape": "none",
    "standalone": true
  },
  "cookie": {
    "expiration": "0"
  },
  "location": [
    {
      "logic": null,
      "rules": [
        {
          "type": "schedule_month",
          "operator": "==",
          "value": "6",
          "logic": "AND"
        }
      ]
    }
  ]
}
