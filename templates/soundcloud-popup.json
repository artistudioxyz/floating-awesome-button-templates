{
  "id": "soundcloud-popup",
  "name": "SoundCloud Popup",
  "description": "Add a popup window to embed and showcase your SoundCloud tracks or playlists. Perfect for musicians and podcasters who want to share their audio content!",
  "license": "free",
  "settings": {
    "type": "modal",
    "content": "<iframe width=\"100%\" height=\"300\" scrolling=\"no\" frameborder=\"no\" allow=\"autoplay\" src=\"https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/TRACK_ID&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true\"></iframe>"
  },
  "design": {
    "color": "#ff5500",
    "grouped": true,
    "icon": {
      "color": "#fff",
      "class": "fa-brands fa-soundcloud"
    },
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    },
    "shape": "none",
    "standalone": true
  },
  "modal": {
    "layout": {
      "id": "stacked",
      "background": {
        "color": "#fff"
      },
      "overlay": {
        "color": "#f9f9f9",
        "opacity": 0.8
      },
      "content": {
        "padding": {
          "top": "1",
          "right": "1",
          "bottom": "1",
          "left": "1",
          "sizing": "rem"
        },
        "margin": {
          "top": "0",
          "right": "0",
          "bottom": "0",
          "left": "0",
          "sizing": "rem"
        }
      }
    }
  }
}
