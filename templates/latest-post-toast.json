{
  "id": "latest-post-toast",
  "name": "Latest Post Toast",
  "description": "Add a toast notification to showcase your latest blog post or article. Perfect for increasing engagement and driving traffic to your newest content!",
  "license": "free",
  "settings": {
    "type": "toast",
    "message": "Check out our latest post!",
    "duration": 3000,
    "text_button": "Read More",
    "url_button": "#",
    "open_in_new_tab": true
  },
  "design": {
    "color": "#FF5722",
    "icon": {
        "color": "#fff",
        "class": "fa-solid fa-newspaper"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202",
    "bar_color": "#FF5722",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    }
  },
  "cookie": {
    "expiration": "7"
  }
}
