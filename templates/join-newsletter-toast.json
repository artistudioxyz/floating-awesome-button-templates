{
  "id": "join-newsletter-toast",
  "name": "Join Newsletter Toast",
  "description": "Add a newsletter signup toast notification to grow your email list. Perfect for building an engaged subscriber base and keeping your audience updated!",
  "license": "free",
  "settings": {
    "type": "toast",
    "message": "Join our newsletter to stay updated with the latest news and updates!",
    "duration": 3000,
    "text_button": "Join Now",
    "url_button": "#",
    "open_in_new_tab": true
  },
  "design": {
    "color": "#FF5722",
    "icon": {
        "color": "#fff",
        "class": "fa-solid fa-envelope-open-text"
    },
    "closeable": true,
    "gravity": "top",
    "position": "left",
    "background": "#fff",
    "text_color": "#020202",
    "bar_color": "#FF5722",
    "responsive": {
      "device": {
        "mobile": 1,
        "tablet": 1,
        "desktop": 1
      }
    }
  },
  "cookie": {
    "expiration": "7"
  }
}
